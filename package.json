{
  "name": "servicelink-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "db:generate": "prisma generate",
    "db:seed": "tsx apps/api/src/prisma/seed.ts",
    "prisma:all": "pnpm --filter api prisma",
    "db:reset": "pnpm --filter api prisma migrate reset --force --skip-generate --skip-seed && pnpm db:seed",
    "db:studio": "pnpm --filter api prisma studio"
  },
  "devDependencies": {
    "turbo": "latest",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
