generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  PROVIDER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(CUSTOMER)
  status    String   @default("active")
  createdAt DateTime @default(now())

  profile          Profile?
  provider         Provider?
  jobs             Job[]           @relation("UserJobs")
  messages         ChatMessage[]
  payments         Payment[]
  reviewsGiven     Review[]        @relation("RaterReviews")
  reviewsReceived  Review[]        @relation("RateeReviews")
}

model Profile {
  id        String  @id @default(cuid())
  firstName String
  lastName  String
  avatarUrl String?
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id])
}

model Provider {
  id              String       @id @default(cuid())
  userId          String       @unique
  user            User         @relation(fields: [userId], references: [id])
  stripeAccountId String?
  kycStatus       String       @default("pending")
  serviceRadiusKm Int?
  online          Boolean      @default(false)
  services        Service[]
  quotes          Quote[]
  assignments     Assignment[]
  payouts         Payout[]
  lat             Float?
  lng             Float?
}

model Service {
  id          String    @id @default(cuid())
  name        String
  description String?
  price       Int?
  providerId  String
  provider    Provider  @relation(fields: [providerId], references: [id])
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id       String     @id @default(cuid())
  name     String
  slug     String     @unique
  parentId String?
  parent   Category?  @relation("CategoryParent", fields: [parentId], references: [id])
  children Category[] @relation("CategoryParent")

  services Service[]
}

model Job {
  id          String        @id @default(cuid())
  key         String        @unique
  title       String
  description String
  customerId  String
  customer    User          @relation("UserJobs", fields: [customerId], references: [id])
  createdAt   DateTime      @default(now())
  messages    ChatMessage[]
  quotes      Quote[]
  assignment  Assignment?
  payment     Payment?
  review      Review?
}

model ChatMessage {
  id        String   @id @default(cuid())
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

model Quote {
  id         String   @id @default(cuid())
  jobId      String
  job        Job      @relation(fields: [jobId], references: [id])
  providerId String
  provider   Provider @relation(fields: [providerId], references: [id])
  total      Int
  notes      String?
  expiresAt  DateTime?
  status     String   @default("pending")
  createdAt  DateTime @default(now())

  @@unique([jobId, providerId])
}

model Assignment {
  id                 String                      @id @default(cuid())
  jobId              String                      @unique
  job                Job                         @relation(fields: [jobId], references: [id])
  providerId         String
  provider           Provider                    @relation(fields: [providerId], references: [id])
  acceptedAt         DateTime                    @default(now())
  status             String                      @default("pending_schedule")
  scheduledStart     DateTime?
  scheduledEnd       DateTime?
  scheduleProposedBy ScheduleProposedBy?
  scheduleProposedAt DateTime?
  scheduleVersion    Int                         @default(0)
  scheduleNotes      String?
  completedAt        DateTime?
  customerVerifiedAt DateTime?
  rejectedAt         DateTime?
  reminderStatus     AssignmentReminderStatus    @default(NONE)
  reminderLastSentAt DateTime?
  reminderCount      Int                         @default(0)
  payoutStatus       AssignmentPayoutStatus      @default(PENDING)
  payoutApprovedBy   String?
  payoutApprovedAt   DateTime?
  createdAt          DateTime                    @default(now())
  updatedAt          DateTime                    @updatedAt

  @@index([status])
  @@index([reminderStatus])
  @@index([payoutStatus])
}

model Payment {
  id                  String    @id @default(cuid())
  jobId               String    @unique
  job                 Job       @relation(fields: [jobId], references: [id])
  customerId          String
  customer            User      @relation(fields: [customerId], references: [id])
  amount              Int
  currency            String    @default("usd")
  stripePaymentIntentId String?
  status              String    @default("requires_capture")
  refunds             Refund[]
}

model Review {
  id        String   @id @default(cuid())
  jobId     String   @unique
  job       Job      @relation(fields: [jobId], references: [id])
  raterId   String
  rater     User     @relation("RaterReviews", fields: [raterId], references: [id])
  rateeId   String
  ratee     User     @relation("RateeReviews", fields: [rateeId], references: [id])
  stars     Int
  comment   String?
  createdAt DateTime @default(now())

  @@index([raterId])
  @@index([rateeId])
}

model Payout {
  id               String   @id @default(cuid())
  providerId       String
  provider         Provider @relation(fields: [providerId], references: [id])
  stripeTransferId String?
  amount           Int
  currency         String   @default("usd")
  status           String   @default("pending")
  createdAt        DateTime @default(now())
  paidAt           DateTime?

  @@index([providerId])
  @@index([status])
}

model Refund {
  id        String   @id @default(cuid())
  paymentId String
  payment   Payment  @relation(fields: [paymentId], references: [id])
  amount    Int
  reason    String?
  status    String   @default("succeeded")
  createdAt DateTime @default(now())

  @@index([paymentId])
}

enum ScheduleProposedBy {
  CUSTOMER
  PROVIDER
  SYSTEM
}

enum AssignmentReminderStatus {
  NONE
  QUEUED
  SENT
  OVERDUE
}

enum AssignmentPayoutStatus {
  PENDING
  AWAITING_APPROVAL
  APPROVED
  PAID
  BLOCKED
}
