generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

enum Role {
  CUSTOMER
  PROVIDER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(CUSTOMER)
  status    String   @default("active")
  createdAt DateTime @default(now())

  profile      Profile?
  provider     Provider?
  jobs         Job[]         @relation("UserJobs")
  messages     ChatMessage[]
  payments     Payment[]
  deviceTokens DeviceToken[]
}

model Profile {
  id        String  @id @default(cuid())
  firstName String
  lastName  String
  avatarUrl String?
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id])
}

model Provider {
  id              String       @id @default(cuid())
  userId          String       @unique
  user            User         @relation(fields: [userId], references: [id])
  stripeAccountId String?
  kycStatus       String       @default("pending")
  serviceRadiusKm Int?
  online          Boolean      @default(false)
  services        Service[]
  quotes          Quote[]
  assignments     Assignment[]
  lat             Float?
  lng             Float?
  averageRating   Float?       @default(0)
  reviewCount     Int          @default(0)

  @@index([averageRating])
}

model Service {
  id          String    @id @default(cuid())
  name        String
  description String?
  price       Int?
  providerId  String
  provider    Provider  @relation(fields: [providerId], references: [id])
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id       String     @id @default(cuid())
  name     String
  slug     String     @unique
  parentId String?
  parent   Category?  @relation("CategoryParent", fields: [parentId], references: [id])
  children Category[] @relation("CategoryParent")

  services Service[]
}

model Job {
  id          String        @id @default(cuid())
  key         String        @unique
  title       String
  description String
  customerId  String
  customer    User          @relation("UserJobs", fields: [customerId], references: [id])
  createdAt   DateTime      @default(now())
  messages    ChatMessage[]
  quotes      Quote[]
  assignment  Assignment?
  payment     Payment?
}

model ChatMessage {
  id        String   @id @default(cuid())
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

model Quote {
  id         String    @id @default(cuid())
  jobId      String
  job        Job       @relation(fields: [jobId], references: [id])
  providerId String
  provider   Provider  @relation(fields: [providerId], references: [id])
  total      Int
  notes      String?
  expiresAt  DateTime?
  status     String    @default("pending")
  createdAt  DateTime  @default(now())

  @@unique([jobId, providerId])
}

model Assignment {
  id                 String                   @id @default(cuid())
  jobId              String                   @unique
  job                Job                      @relation(fields: [jobId], references: [id])
  providerId         String
  provider           Provider                 @relation(fields: [providerId], references: [id])
  acceptedAt         DateTime                 @default(now())
  status             String                   @default("pending_schedule")
  scheduledStart     DateTime?
  scheduledEnd       DateTime?
  scheduleProposedBy ScheduleProposedBy?
  scheduleProposedAt DateTime?
  scheduleVersion    Int                      @default(0)
  scheduleNotes      String?
  completedAt        DateTime?
  customerVerifiedAt DateTime?
  rejectedAt         DateTime?
  reminderStatus     AssignmentReminderStatus @default(NONE)
  reminderLastSentAt DateTime?
  reminderCount      Int                      @default(0)
  payoutStatus       AssignmentPayoutStatus   @default(PENDING)
  payoutApprovedBy   String?
  payoutApprovedAt   DateTime?
  createdAt          DateTime                 @default(now())
  updatedAt          DateTime                 @updatedAt
  checkpoints        AssignmentCheckpoint[]
  locationUpdates    LocationUpdate[]

  @@index([status])
  @@index([reminderStatus])
  @@index([payoutStatus])
}

model Payment {
  id                    String    @id @default(cuid())
  jobId                 String    @unique
  job                   Job       @relation(fields: [jobId], references: [id])
  customerId            String
  customer              User      @relation(fields: [customerId], references: [id])
  amount                Int
  currency              String    @default("usd")
  stripePaymentIntentId String?   @unique
  status                String    @default("requires_capture")
  capturedAt            DateTime?
  createdAt             DateTime  @default(now())
  refunds               Refund[]

  @@index([status])
}

model Refund {
  id             String    @id @default(cuid())
  paymentId      String
  payment        Payment   @relation(fields: [paymentId], references: [id])
  stripeRefundId String?
  amount         Int
  reason         String?
  status         String    @default("pending")
  createdAt      DateTime  @default(now())
  processedAt    DateTime?

  @@index([paymentId])
  @@index([status])
}

model Review {
  id          String   @id @default(cuid())
  jobId       String
  raterUserId String
  rateeUserId String
  stars       Int
  comment     String?
  createdAt   DateTime @default(now())

  @@unique([jobId, raterUserId])
  @@index([rateeUserId])
}

model Payout {
  id               String    @id @default(cuid())
  providerId       String
  stripeTransferId String?
  amount           Int
  currency         String    @default("usd")
  status           String    @default("pending")
  createdAt        DateTime  @default(now())
  processedAt      DateTime?
  failureReason    String?

  @@index([providerId])
  @@index([status])
}

enum ScheduleProposedBy {
  CUSTOMER
  PROVIDER
  SYSTEM
}

enum AssignmentReminderStatus {
  NONE
  QUEUED
  SENT
  OVERDUE
}

enum AssignmentPayoutStatus {
  PENDING
  AWAITING_APPROVAL
  APPROVED
  PAID
  BLOCKED
}

model KnowledgeBase {
  id        String                 @id @default(cuid())
  title     String
  content   String
  category  String
  embedding Unsupported("vector")?
  createdAt DateTime               @default(now())
  updatedAt DateTime               @updatedAt

  @@index([category])
}

enum LoyaltyTier {
  BRONZE
  SILVER
  GOLD
  PLATINUM
}

model LoyaltyAccount {
  id             String               @id @default(cuid())
  userId         String               @unique
  points         Int                  @default(0)
  tier           LoyaltyTier          @default(BRONZE)
  lifetimePoints Int                  @default(0)
  lifetimeSpent  Int                  @default(0)
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  transactions   LoyaltyTransaction[]
  rewards        LoyaltyReward[]

  @@index([tier])
  @@index([points])
}

model LoyaltyTransaction {
  id          String         @id @default(cuid())
  accountId   String
  account     LoyaltyAccount @relation(fields: [accountId], references: [id])
  points      Int
  type        String // EARN, REDEEM, EXPIRE, ADJUSTMENT
  description String
  jobId       String?
  createdAt   DateTime       @default(now())

  @@index([accountId])
  @@index([jobId])
  @@index([type])
}

model LoyaltyReward {
  id          String         @id @default(cuid())
  accountId   String
  account     LoyaltyAccount @relation(fields: [accountId], references: [id])
  type        String // DISCOUNT_PERCENT, DISCOUNT_FIXED, FREE_SERVICE
  value       Int // percentage (e.g., 10 for 10%) or fixed amount in cents
  description String
  code        String?        @unique
  expiresAt   DateTime?
  redeemedAt  DateTime?
  jobId       String? // Job where reward was redeemed
  createdAt   DateTime       @default(now())

  @@index([accountId])
  @@index([code])
  @@index([redeemedAt])
}

model DeviceToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  platform  String // ios, android, web
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([active])
  @@index([platform])
}

// M11 Phase 2: GPS Features
enum CheckpointType {
  CHECK_IN
  CHECK_OUT
}

model AssignmentCheckpoint {
  id           String         @id @default(cuid())
  assignmentId String
  assignment   Assignment     @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  type         CheckpointType
  latitude     Float
  longitude    Float
  accuracy     Float? // GPS accuracy in meters
  timestamp    DateTime
  photoUrl     String?
  notes        String?
  createdAt    DateTime       @default(now())

  @@index([assignmentId])
  @@index([type])
  @@index([timestamp])
}

model LocationUpdate {
  id           String     @id @default(cuid())
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  latitude     Float
  longitude    Float
  accuracy     Float // GPS accuracy in meters
  timestamp    DateTime
  createdAt    DateTime   @default(now())

  @@index([assignmentId, timestamp])
}

enum PhotoContextType {
  JOB
  CHECK_IN
  CHECK_OUT
  CHAT
  INVOICE
}

model Photo {
  id           String           @id @default(cuid())
  userId       String
  url          String
  thumbnailUrl String?
  filename     String
  contentType  String
  size         Int
  width        Int?
  height       Int?
  contextType  PhotoContextType
  contextId    String // ID of the related entity (job, assignment, etc.)
  metadata     Json? // Additional metadata
  createdAt    DateTime         @default(now())

  @@index([userId])
  @@index([contextType, contextId])
}
